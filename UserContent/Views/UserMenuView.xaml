<UserControl x:Class="ModernGUI_Surveilia.UserContent.Views.UserMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernGUI_Surveilia.UserContent.Views"
        mc:Ignorable="d"
        Height="415" Width="653"
        Background="#140915">

    <!--
    This block controls how the buttons are highlighted. Originally, the mouse over effect was far too intense to make the buttons readable.
    This creates a very subtle mouseover which doesn't distract a user.
    -->
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#140915"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value=" #272590"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="380"/>
        </Grid.RowDefinitions>

        <Grid Background="#0F0F2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="653"/>
            </Grid.ColumnDefinitions>

            <!-- 
            This block of code represents the buttons and GUI header. 
            -->
            <TextBlock Text="User Menu" Foreground="FloralWhite" Grid.Column="0" VerticalAlignment="Center" 
                       HorizontalAlignment="Left" FontSize="18" Margin="5,8,0,8" Width="238" 
                       FontFamily="Copperplate Gothic Bold" Height="20"/>
        </Grid>
        <Label Name="Description" FontFamily="Times New Roman" Grid.Row="1" Margin="10,37,504,307"
               FontSize="20" Foreground="White" Content="Description"/>
        <Label x:Name="DescriptText" HorizontalAlignment="Center" Margin="0,78,0,0" FontSize="15"
               Grid.Row="1" VerticalAlignment="Top" Height="113" Width="633" Foreground="White" 
               Content="The Surveilia ground station is designed for viewing data acquired during flight. Stats provides
               &#10;graphical and specific relevant data including flight time, people encountered, etc.
               &#10;Also, when a person is encountered, a picture will be sent for display with a time stamp 
               &#10;in the Stats."/>
        <Label Content="Usage" HorizontalAlignment="Left" Margin="10,196,0,0" Grid.Row="1" FontFamily="Times New Roman" 
               VerticalAlignment="Top" Height="36" Width="70" Foreground="White" FontSize="20"/>
        <Label HorizontalAlignment="Center" Margin="0,237,0,0" Grid.Row="1" Foreground="White" 
               VerticalAlignment="Top" Height="105" Width="633" FontSize="15"
               Content="The ground station connects to the Surveilia flight computer using User Datagram Protocol. 
               &#10;The protoype only sends information back to the ground station. The ground station is 
               &#10;intended to be for user information and situational awareness."/>
    </Grid>
</UserControl>
