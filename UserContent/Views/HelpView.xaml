<UserControl 
        x:Class="ModernGUI_Surveilia.UserContent.Views.HelpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernGUI_Surveilia.UserContent.Views"
        mc:Ignorable="d"
        Background="#140915"
        FontFamily="Biondi"
        Height="415" Width="653">

    <!--
    This block controls how the buttons are highlighted. Originally, the mouse over effect was far too intense to make the buttons readable.
    This creates a very subtle mouseover which doesn't distract a user.
    -->
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="380"/>
        </Grid.RowDefinitions>

        <Grid Background="#140915">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="653"/>
            </Grid.ColumnDefinitions>
            <!-- 
            This block of code represents the buttons and GUI header. 
            -->
            <TextBlock Text="HELP" Foreground="FloralWhite" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                   FontSize="18" Margin="5,8,0,7" Width="198" FontFamily="Copperplate Gothic Bold" Height="20"/>
        </Grid>


        <Label x:Name="HelpWindowLabel" Foreground="FloralWhite" FontFamily="Times New Roman" FontSize="18" Content="How to use:"  HorizontalAlignment="Left" 
               Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="95"/>
        <TextBlock x:Name="HelpWindowInfo" HorizontalAlignment="Left" Margin="12,54,0,0" Grid.Row="1" VerticalAlignment="Top" Height="156" Width="623" Foreground="White" TextWrapping="Wrap" FontSize="18" TextAlignment="Justify">
        Welcome to the Surveilia Ground Station Help Window. Surveilia is an autonomous security drone system that informs users when human activity is detected. 
        When a human is detected, a message and image is displayed in the main menu of this application. As well as the statistics in the Stats Window.
        If you are looking to configure the flight paths, see the MissionPlanner software.
        </TextBlock>
        <TextBlock x:Name="Instructions" HorizontalAlignment="Left" Margin="12,197,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="607" Foreground="FloralWhite" TextWrapping="Wrap" FontSize="20" FontFamily="Copperplate Gothic Bold">
        To ensure safety and compliance:</TextBlock>
        <Label Content="- Ensure all batteries are 100% charged before flight &#xA;- Establish communication between directories and the G.S. before flight &#xA;- Fly in a designated area with proper licensing" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Foreground="White" FontSize="18" Margin="12,224,0,0" ></Label>
        <TextBlock Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Hyperlink NavigateUri="https://surveilia.wixsite.com/surveilia" RequestNavigate="Hyperlink_RequestNavigate" Foreground="White" 
                   FontFamily="Copperplate Gothic Bold" FontSize="16">
                Click here to access our Wix Website
        </Hyperlink>
        </TextBlock>
        
    </Grid>
</UserControl>
