<UserControl 
        x:Class="ModernGUI_Surveilia.UserContent.Views.HelpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernGUI_Surveilia.UserContent.Views"
        mc:Ignorable="d"
        Background="#140915"
        FontFamily="Biondi"
        Height="415" Width="653">

    <!--
    This block controls how the buttons are highlighted. Originally, the mouse over effect was far too intense to make the buttons readable.
    This creates a very subtle mouseover which doesn't distract a user.
    -->
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="380"/>
        </Grid.RowDefinitions>

        <Grid Background="#140915">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="653"/>
            </Grid.ColumnDefinitions>
            <!-- 
            This block of code represents the buttons and GUI header. 
            -->
            <TextBlock Text="HELP" Foreground="FloralWhite" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                   FontSize="18" Margin="5,8,0,7" Width="198" FontFamily="Copperplate Gothic Bold" Height="20"/>
        </Grid>


        <Label x:Name="HelpWindowLabel" Foreground="FloralWhite" FontFamily="Times New Roman" FontSize="18" Content="How to use:"  HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32" Width="95"/>
        <Label x:Name="HelpWindowInfo" HorizontalAlignment="Left" Margin="20,47,0,0" Grid.Row="1" VerticalAlignment="Top" Height="102" Width="607" Foreground="White"
               Content="Hello and welcome to the Surveilia ground station. Surveilia is an autonomous security system that informs &#10;users when it detects human activity. When a human is detected, a message and image is displayed in the &#10;main page of this application.
               &#10;&#10;Surveilia is currently asynchronous due to hidden firmware on the Kakute F7 flight controller. To get best use &#10;follow these instructions:"/>
        <TextBlock Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Hyperlink NavigateUri="http://www.google.com" RequestNavigate="Hyperlink_RequestNavigate" Foreground="White" FontFamily="Copperplate Gothic Bold" FontSize="16">
                Click here to access our Wix Website
        </Hyperlink>
        </TextBlock>
        
    </Grid>
</UserControl>
